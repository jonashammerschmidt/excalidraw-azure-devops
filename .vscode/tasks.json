{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm install",
      "type": "shell",
      "command": "npm install",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": []
    },
    {
      "label": "publish dev",
      "dependsOn": "build",
      "type": "shell",
      "command": "npx tfx-cli extension create --manifest-globs vss-extension-dev.json",
      "problemMatcher": []
    },
    {
      "label": "publish dev (increase version)",
      "dependsOn": "build",
      "type": "shell",
      "command": "npx tfx-cli extension create --rev-version --manifest-globs vss-extension-dev.json",
      "problemMatcher": []
    },
    {
      "label": "publish prod",
      "dependsOn": "build",
      "type": "shell",
      "command": "npx tfx-cli extension create --manifest-globs vss-extension.json",
      "problemMatcher": []
    },
    {
      "label": "publish prod (increase version)",
      "dependsOn": "build",
      "type": "shell",
      "command": "npx tfx-cli extension create --rev-version --manifest-globs vss-extension.json",
      "problemMatcher": []
    }
  ]
}
